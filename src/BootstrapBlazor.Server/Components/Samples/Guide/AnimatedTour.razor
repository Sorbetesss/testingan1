        <div class="col-12 col-sm-6">
            <BootstrapInputGroup>
                <BootstrapInput TValue="string"></BootstrapInput>
                <Button Icon="fa-solid fa-magnifying-glass"></Button>
            </BootstrapInputGroup>
        </div>
