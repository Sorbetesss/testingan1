@page "/focus-guide"
@inject IStringLocalizer<FocusGuides> Localizer

<h3>@Localizer["FocusGuideTitle"]</h3>

<h4>@Localizer["FocusGuideSubtitle"]</h4>

<DemoBlock Title="@Localizer["FocusGuideNormalTitle"]"
           Introduction="@Localizer["FocusGuideNormalIntro"]"
           Name="Normal">
    <section ignore class="bb-guid1">
        <p>通过设置 <code>FocusGuideConfig</code> 参数 <code>Animate="false"</code> 关闭动画效果</p>
        <div class="row g-2">
            <div class="col-12 col-sm-6">
                <BootstrapInputGroup>
                    <BootstrapInput TValue="string"></BootstrapInput>
                    <Button Icon="fa-solid fa-magnifying-glass"></Button>
                </BootstrapInputGroup>
            </div>
            <div class="col-12">
                <Button OnClickWithoutRender="OnStart" Text="Start" class="btn-guide"></Button>
            </div>
        </div>
    </section>

    <FocusGuide @ref="_guide1" Config="_config1">
        <FocusGuideStep Selector=".sidebar-switch + div">
            <FocusGuidePopover Title="高亮向导组件演示" Description="这里是菜单，点击后右侧面板出现详细示例"></FocusGuidePopover>
        </FocusGuideStep>
        <FocusGuideStep Selector=".bb-title">
            <FocusGuidePopover Title="高亮向导组件演示" Description="这里是组件介绍，通过点击下方单选框可切换图标主题"></FocusGuidePopover>
        </FocusGuideStep>
        <FocusGuideStep Selector=".demo-block">
            <FocusGuidePopover Title="高亮向导组件演示" Description="这里是示例区域，此区域内展示具体例子"></FocusGuidePopover>
        </FocusGuideStep>
        <FocusGuideStep Selector=".bb-guid1">
            <FocusGuidePopover Title="高亮向导组件演示" Description="这里是示例区域"></FocusGuidePopover>
        </FocusGuideStep>
        <FocusGuideStep Selector=".bb-guid1 .btn-guide">
            <FocusGuidePopover Title="高亮向导组件演示" Description=" 点击这里开始"></FocusGuidePopover>
        </FocusGuideStep>
    </FocusGuide>
</DemoBlock>
