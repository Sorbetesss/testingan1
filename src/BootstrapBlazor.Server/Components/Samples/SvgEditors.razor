@page "/svg-editors"
@inject IStringLocalizer<SvgEditors> Localizer

<h3>@Localizer["SvgEditorTitle"]</h3>

<DemoBlock Title="@Localizer["BasicTitle"]" Introduction="@Localizer["BasicIntro"]">
    <SvgEditor OnSaveChanged="@OnSaveChanged"></SvgEditor>
    <ConsoleLogger @ref="Console" class="mt-3"></ConsoleLogger>
</DemoBlock>

@code
{
    [NotNull]
    private BootstrapBlazor.Components.ConsoleLogger? Console { get; set; }

    private Task OnSaveChanged(string content)
    {
        Console.Log(content);
        return Task.CompletedTask;
    }
}
