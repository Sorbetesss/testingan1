@page "/segmented"
@inject IStringLocalizer<Segmenteds> Localizer

<h3>@Localizer["Title"]</h3>

<h4>@Localizer["SubTitle"]</h4>

<ul>
    <li>@Localizer["Description1"]</li>
    <li>@Localizer["Description2"]</li>
</ul>

<DemoBlock Title="@Localizer["BasicTitle"]" Introduction="@Localizer["BasicIntro"]">
    <Segmented Items="@Items" @bind-Value="@Value"></Segmented>
</DemoBlock>

<DemoBlock Title="@Localizer["ControlledTitle"]" Introduction="@Localizer["ControlledIntro"]">
    <Segmented Items="@Items" Value="@Value1" ValueChanged="ValueChanged"></Segmented>
    <ConsoleLogger @ref="ConsoleLogger" class="mt-3"></ConsoleLogger>
</DemoBlock>

<DemoBlock Title="@Localizer["BlockTitle"]" Introduction="@Localizer["BlockIntro"]">
    <Segmented IsBlock="true" Items="@LongTextItems" Value="@BlockValue"></Segmented>
</DemoBlock>

<DemoBlock Title="@Localizer["DisableTitle"]" Introduction="@Localizer["DisableIntro"]">
    <Segmented Items="@DisableItems" Value="@DisableValue"></Segmented>
</DemoBlock>

<DemoBlock Title="@Localizer["CustomRenderTitle"]" Introduction="@Localizer["CustomRenderIntro"]">
    <Segmented Items="@Items">
        <DisplayItemTemplate>
            <div style="padding:4px">
                @context.Text
            </div>
        </DisplayItemTemplate>
    </Segmented>
</DemoBlock>

<DemoBlock Title="@Localizer["IconTitle"]" Introduction="@Localizer["IconIntro"]">
    <Segmented Items="@IconItems"></Segmented>
</DemoBlock>

<DemoBlock Title="@Localizer["SizeTitle"]" Introduction="@Localizer["SizeIntro"]">
    <div class="row g-3">
        <div class="col-12">
            <Segmented Items="@Items" @bind-Value="@Value2" Size="Size.Large"></Segmented>
        </div>
        <div class="row-12">
            <Segmented Items="@Items" @bind-Value="@Value3" class="mt-3"></Segmented>
        </div>
        <div class="row-12">
            <Segmented Items="@Items" @bind-Value="@Value4" class="mt-3" Size="Size.Small"></Segmented>
        </div>
    </div>
</DemoBlock>

<AttributeTable Items="@GetAttributes()" />
