@page "/slide-button"
@inject IStringLocalizer<SlideButtons> Localizer

<h3>@Localizer["SlideButtonTitle"]</h3>

<h4>@Localizer["SlideButtonIntro"]</h4>

<DemoBlock Title="@Localizer["BaseUsageText"]" Introduction="@Localizer["BaseUsageIntro"]" Name="Normal">
    <div class="row g-3">
        <div class="col-12">
            <BootstrapInputGroup>
                <BootstrapInputGroupLabel DisplayText="Placement" />
                <RadioList Items="_items" @bind-Value="Placement" />
            </BootstrapInputGroup>
        </div>
        <div class="col-12">
            <SlideButton Icon="fa-solid fa-flag" Placement="Placement">
                <SlideTemplate>
                    <div class="slide-header">
                        <div class="flex-fill">Text</div>
                        <button class="btn-close btn-close-white" type="button" aria-label="Close"></button>
                    </div>
                    <div class="slide-body scroll">
                        <div class="slide-item">
                            Text 1
                        </div>
                        <div class="slide-item active">
                            Text 2
                        </div>
                        <div class="slide-item">
                            Text 1
                        </div>
                        <div class="slide-item">
                            Text 1
                        </div>
                        <div class="slide-item">
                            Text 1
                        </div>
                        <div class="slide-item">
                            Text 1
                        </div>
                        <div class="slide-item">
                            Text 1
                        </div>
                        <div class="slide-item">
                            Text 1
                        </div>
                        <div class="slide-item">
                            Text 1
                        </div>
                        <div class="slide-item">
                            Text 1
                        </div>
                        <div class="slide-item">
                            Text 1
                        </div>
                        <div class="slide-item">
                            Text 1
                        </div>
                        <div class="slide-item">
                            Text 1
                        </div>
                    </div>
                </SlideTemplate>
            </SlideButton>
        </div>
    </div>

</DemoBlock>

<AttributeTable Items="@GetAttributes()" />
