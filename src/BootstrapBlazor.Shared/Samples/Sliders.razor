@page "/sliders"

@inject IStringLocalizer<Sliders> Localizer

<h3>@Localizer["SliderTitle"]</h3>

<h4>@Localizer["SliderDescription"]</h4>

<DemoBlock Title="@Localizer["SliderNormalTitle"]"
           Introduction="@Localizer["SliderNormalIntro"]"
           Name="Normal"
           Demo="typeof(Demos.Sliders.SliderNormal)" />

<AttributeTable Items="@GetAttributes()" />

<EventTable Items="@GetEvents()" />

@code {
    /// <summary>
    /// 获得属性方法
    /// </summary>
    /// <returns></returns>
    private IEnumerable<AttributeItem> GetAttributes() => new AttributeItem[]
    {
        // TODO: 移动到数据库中
        new AttributeItem() {
            Name = "IsDisabled",
            Description = Localizer["SliderIsDisabled"],
            Type = "boolean",
            ValueList = " — ",
            DefaultValue = "false"
        },
        new AttributeItem() {
            Name = "Value",
            Description = Localizer["SliderValue"],
            Type = "int",
            ValueList = " — ",
            DefaultValue = " — "
        },
    };

    /// <summary>
    /// 获得事件方法
    /// </summary>
    /// <returns></returns>
    private IEnumerable<EventItem> GetEvents() => new EventItem[]
    {
        new EventItem()
        {
            Name = "ValueChanged",
            Description = Localizer["SliderValueChanged"],
            Type ="EventCallback<int>"
        }
    };
}
