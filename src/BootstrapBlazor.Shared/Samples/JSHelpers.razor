@page "/JSHelpers"
@inject IJSRuntime JSRuntime
@inject IStringLocalizer<JSHelpers> Localizer

<DemoBlock Title="Add/Remove Meta" Introduction="@Localizer["AddLinkIntro"]" ShowCode="false" Name="ChangeMeta">
    <Pre>//默认rel="stylesheet"
await AddLink("_content/BootstrapBlazor/css/bootstrap.blazor.bundle.min.css");
await RemoveLink("_content/BootstrapBlazor/css/bootstrap.blazor.bundle.min.css");
//指定rel="icon"
await AddLink("favicon.ico","icon");
await RemoveLink("favicon.ico");</Pre>
</DemoBlock>

<DemoBlock Title="@Localizer["JSConsoleTitle"]" Introduction="@Localizer["JSConsoleIntro"]" ShowCode="false" Name="JSConsole">
    <Pre class="mb-2">await JSRuntime.Console(ConsoleType.Log, "Hello BootstrapBlazor");</Pre>
    <Button class="mb-2" Text="Clear" OnClick="@(()=> JSRuntime.ConsoleClear())" />
    <Button class="mb-2" Text="Log" OnClick="@(()=> JSRuntime.Console(ConsoleType.Log, jsAlertContent))" />
    <Button class="mb-2" Text="Warn" OnClick="@(()=> JSRuntime.Console(ConsoleType.Warn, jsAlertContent))" />
    <Button class="mb-2" Text="Error" OnClick="@(()=> JSRuntime.Console(ConsoleType.Error, jsAlertContent))" />
    <Button class="mb-2" Text="Info" OnClick="@(()=> JSRuntime.Console(ConsoleType.Info, jsAlertContent))" />
    <Button class="mb-2" Text="Assert" OnClick="@(()=> JSRuntime.Console(ConsoleType.Assert, false, jsAlertContent))" />
    <Button class="mb-2" Text="Dir" OnClick="@(()=> JSRuntime.Console(ConsoleType.Dir, null))" />
    <Button class="mb-2" Text="Time" OnClick="@(()=> JSRuntime.Console(ConsoleType.Time))" />
    <Button class="mb-2" Text="TimeEnd" OnClick="@(()=> JSRuntime.Console(ConsoleType.TimeEnd))" />
    <Button class="mb-2" Text="Count" OnClick="@(()=> JSRuntime.Console(ConsoleType.Count,jsAlertContent))" />
    <Button class="mb-2" Text="Group" OnClick="@(()=> JSRuntime.Console(ConsoleType.Group,jsAlertContent))" />
    <Button class="mb-2" Text="GroupEnd" OnClick="@(()=> JSRuntime.Console(ConsoleType.GroupEnd))" />
    <Button class="mb-2" Text="Table" OnClick="@(()=> JSRuntime.Console(ConsoleType.Table, null))" />
    <Button class="mb-2" Text="Trace" OnClick="@(()=> JSRuntime.Console(ConsoleType.Trace))" />
</DemoBlock>

@code {
    private string jsAlertContent = "Hello BootstrapBlazor";
}
