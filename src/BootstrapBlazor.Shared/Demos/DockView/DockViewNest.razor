@page "/dockview-nest"

<DockView Name="DockViewNest" EnableLocalStorage="false">
    <DockContent Type="DockContentType.Row">
        <DockComponent Title="标签一">
            <BootstrapInput TValue="string"></BootstrapInput>
        </DockComponent>
        <DockComponent Title="标签二">
            <Button Text="Click"></Button>
        </DockComponent>
        <DockComponent Title="嵌套布局">
            <DockView Name="DockViewInnerNest" EnableLocalStorage="false">
                <DockContent Type="DockContentType.Column">
                    <DockComponent Title="内嵌标签一">
                        <BootstrapInput TValue="string"></BootstrapInput>
                    </DockComponent>
                    <DockContent Type="DockContentType.Row">
                        <DockComponent Title="内嵌标签二">
                            <FetchData></FetchData>
                        </DockComponent>
                        <DockComponent Title="内嵌标签三">
                            <Counter></Counter>
                        </DockComponent>
                    </DockContent>
                </DockContent>
            </DockView>
        </DockComponent>
    </DockContent>
</DockView>
