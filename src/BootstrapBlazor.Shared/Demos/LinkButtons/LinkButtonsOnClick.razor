@inject IStringLocalizer<LinkButtonsOnClick> Localizer

<LinkButton Text="@Localizer["LinkButtonText"]" OnClick="@OnClick" />
<Logger @ref="Logger" class="mt-3" />

@code {
    [NotNull]
    private Logger? Logger{ get; set; }

    private void OnClick()
    {
        Logger.Log($"{DateTimeOffset.Now}: Clicked!");
    }
}
