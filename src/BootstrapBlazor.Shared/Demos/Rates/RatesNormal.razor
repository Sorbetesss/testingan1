@inject IStringLocalizer<BootstrapBlazor.Shared.Samples.Rates> Localizer

<Rate Value="@BindValue" ValueChanged="@OnValueChanged" />
<Logger @ref="Logger" class="mt-3" />

@code {
    [NotNull]
    private Logger? Logger { get; set; }

    private int BindValue { get; set; } = 3;

    private void OnValueChanged(int val)
    {
        BindValue = val;
        Logger.Log($"{Localizer["RatesLog"]} {val}");
    }
}
