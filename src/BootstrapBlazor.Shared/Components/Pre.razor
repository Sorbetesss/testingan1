@inherits JSModuleComponentBase
@attribute [JSModuleAutoLoader]

<div class="pre-code" id="@Id" data-bb-title="@CopiedText">
    @if (!Loaded)
    {
        <p class="loading">@LoadingText</p>
    }
    else
    {
        <pre @attributes="@AdditionalAttributes" class="@ClassName"><code>@ChildContent</code></pre>
        @if (CanCopy)
        {
            <Button TooltipPlacement="Placement.Left" TooltipText="@TooltipTitle">Copy</Button>
        }
    }
</div>
