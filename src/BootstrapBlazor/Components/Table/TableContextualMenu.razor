@namespace BootstrapBlazor.Components
@using Microsoft.Extensions.Localization
@inherits FilterBase
@inject IStringLocalizer<TableContextualMenu> Localizer

<div>
    <ul class="menu-list">
        <li class="mb-1">
            <div>
                <BootstrapInput class="w-100" TValue="string" UseInputEvent="true"
                                @bind-Value="@Value" PlaceHolder="@Localizer["ContextualMenuSearchPlaceHolderText"]" IsSelectAllTextOnFocus="true"
                                bind-value:event="oninput" IsAutoFocus="true"
                                OnValueChanged="OnSearchValueChanged" />
            </div>
        </li>
        <li class="mb-1 ps-3 pt-2 border menu-container">
            <div class="menu-items">
                <div class="item-hover">
                    <Checkbox class="w-100" @bind-Value="@checkAll" ShowAfterLabel DisplayText="@Localizer["ContextualMenuSelectAllText"]" OnStateChanged="@OnStateChanged" />
                </div>
                @foreach (var item in FilterItems)
                {
                    <div class="item-hover">
                        <Checkbox class="w-100" @bind-Value="@item.Checked" ShowAfterLabel DisplayText="@item.Text" />
                    </div>
                }
            </div>
        </li>
    </ul>
</div>
